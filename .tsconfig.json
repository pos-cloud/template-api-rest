{
	"compilerOptions": {
		"sourceMap": true,
		"target": "es2018",
		"outDir": "./dist",
		"baseUrl": "./src",
		"alwaysStrict": true,
		"noImplicitAny": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"typeRoots": ["./types"]
	},
	"include": [
		"src/**/*.ts",
		"src/types"
		
	],
	"exclude": [
		"node_modules"
	]
}